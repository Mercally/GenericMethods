@model _Resultado<List<RptBoletas>>

@{
    ViewBag.Title = "Boletas";

    if (!Model.EsCorrecto)
    {
        return;
    }
}
<div class="row">
    <div class="col-lg-12">
        <h2>Boletas</h2>
        <p>
            Filtro:
        </p>
        <div>
            @using (Html.BeginForm("Boletas", "Reportes", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-2">
                        <input type="date" class="form-control" name="fechaEntrada" value="" />
                    </div>
                    <div class="col-2">
                        <input type="date" class="form-control" name="fechaSalida" value="" />
                    </div>
                    <div class="col-2">
                        <input type="submit" class="btn btn-success" name="name" value="Ver reporte" />
                    </div>
                    <div class="col-6"></div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <hr />
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr class="table-dark">
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].NumeroBoleta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].FechaEntrada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].FechaSalida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].TiempoEfectivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].TiempoInvertidoEn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].ProyectoNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].ClienteNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].DepartamentoNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.Resultado[0].Descripcion)
                </th>
            </tr>

            @foreach (var boleta in Model.Resultado)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.NumeroBoleta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.FechaEntrada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.FechaSalida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.TiempoEfectivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.TiempoInvertidoEn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.ProyectoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.ClienteNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.DepartamentoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => boleta.Descripcion)
                    </td>
                </tr>
                <tr class="table-dark">
                    <th></th>
                    <th colspan="4">
                        Descripción de la activiadad
                    </th>
                    <th>
                        Estado
                    </th>
                    <th colspan="2">
                        Fecha de la actividad
                    </th>
                    <th>
                        Tiempo invertido
                    </th>
                </tr>
                foreach (var actividades in boleta.ListaRptActividades)
                {
                    <tr>
                        <td></td>
                        <td colspan="4">
                            @Html.DisplayFor(modelItem => actividades.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => actividades.EstadoNombre)
                        </td>
                        <td colspan="2">
                            @Html.DisplayFor(modelItem => actividades.FechaActividad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => actividades.TiempoActividad)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
